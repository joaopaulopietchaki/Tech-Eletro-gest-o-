# ===================================
# LIMITAR TAMANHO DO REQUEST
# ===================================

<IfModule mod_security.c>
    # Limitar tamanho do request body a 10MB
    SecRequestBodyLimit 10485760
    
    # Limitar tamanho de upload a 10MB
    SecRequestBodyNoFilesLimit 131072
</IfModule>

